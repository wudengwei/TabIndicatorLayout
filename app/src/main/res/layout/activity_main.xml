<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="屏幕宽度按比重分给tab"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_change"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="第2个与第3个tab交换"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="删除第3个tab"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="在第2个tab后添加一个tab"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@color/colorAccent"/>
    </LinearLayout>
    <com.wudengwei.tabindicatorlayout.TabIndicatorLayout
        android:id="@+id/til_main_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:tabVisibleNum="3"
        app:tabFixedWidth="true"
        app:tabScrollOffset="60dp"
        app:indicatorHeight="6dp"
        app:indicatorRadius="6dp"
        app:indicatorWidth="130dp"
        app:indicatorWidthPercent="1"
        app:indicatorColor="@color/colorPrimaryDark"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
