<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TabL
    <com.wudengwei.tabindicatorlayout.TabIndicatorLayout
        android:id="@+id/til_main_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:tabVisibleNum="5"
        app:tabFixedWidth="false"
        app:indicatorHeight="6dp"
        app:indicatorRadius="6dp"
        app:indicatorWidthPercent="0.2"
        app:indicatorColor="@color/colorPrimaryDark"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
